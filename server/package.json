{
  "name": "crypto-chat-server",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "check:apis": "tsx scripts/check-apis.ts",
    "test": "node --test --import tsx \"tests/**/*.test.ts\"",
    "test:live": "LIVE_TESTS=1 node --test --import tsx \"tests/live/**/*.test.ts\""
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "firebase-admin": "^12.5.0",
    "mongoose": "^8.6.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^25.0.9",
    "tsx": "^4.16.2",
    "typescript": "^5.5.4"
  }
}
